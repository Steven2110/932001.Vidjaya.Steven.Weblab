@{
    ViewData["Title"] = "Quiz";
}

<style>
    input {
        width: 400px;
    }

    .nextButton, .finishButton {
        width: 120px;
        height: 50px;
        font-size: 20px;
        border-radius: 5px;
    }

    .finishButton {
        background-color: rgb(51, 122, 183);
        color: white;
    }
</style>

<div class="quiz-block">
    <h1>Quiz</h1>
    <form method="post">
        <div>
            <p>@ViewBag.Question</p>
        </div>
        <div>
            <input name="answer"/>
        </div>
        <br/>
        <div>
            <input name="nextQuestion" type="submit" formaction="~/Home/NextQuestion" value="Next" class="nextButton"/>
            <input name="finish" type="submit" formaction="~/Home/Finish" value="Finish" class="finishButton"/>
        </div>
    </form>
</div>